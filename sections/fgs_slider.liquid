{% capture slides %}
  {% content_for 'blocks' %}
{% endcapture %}

<section class="fgs-slider-section-{{ section.id }}">
  <div class="container">
    <h2>{{ section.settings.heading | default: 'Featured Slider' }}</h2>
    <!-- Slider main container -->
    {% render 'fgs_slider', slides: slides %}
  </div>
</section>

<script>
  setTimeout(() => {
    const swiper = new Swiper('.swiper', {
      // Optional parameters
      direction: 'horizontal',
      loop: true,

      // If we need pagination
      pagination: {
        el: '.swiper-pagination',
      },

      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },

      // And if we need scrollbar
      scrollbar: {
        el: '.swiper-scrollbar',
      },
    });
  }, 1000);
</script>
{% schema %}
{
  "name": "FGS Slider",
  "blocks": [{ "type": "_fgs-slide" }],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slider Heading",
      "default": "Featured Slider"
    }
  ],

  "max_blocks": 10,
  "presets": [
    {
      "name": "FGS Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
