{% capture children %}
    {% content_for 'blocks' %}
{% endcapture %}

{% render 'fgs-slide', children: children, attributes: block.shopify_attributes %}
{% schema %}
{
  "name": "FGS Slide",
  "blocks": [
    {
      "type": "@theme"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Slider Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Slider description goes here."
    }
  ],
  "presets": [{ "name": "FGS Slide" }]
}
{% endschema %}
